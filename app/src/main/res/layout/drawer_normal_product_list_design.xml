<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/space_16"
    android:layout_marginLeft="@dimen/space_16"
    android:layout_marginTop="@dimen/space_10"
    android:layout_marginEnd="@dimen/space_10"
    android:layout_marginRight="@dimen/space_10">

   <ImageView
       android:id="@+id/product_logo"
       android:layout_width="@dimen/space_24"
       android:layout_height="@dimen/space_24"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Veberages"
        app:layout_constraintStart_toEndOf="@id/product_logo"
        app:layout_constraintTop_toTopOf="@id/product_logo"
        app:layout_constraintBottom_toBottomOf="@id/product_logo"
        app:layout_constraintEnd_toStartOf="@id/product_arrow"
        android:paddingStart="@dimen/space_10"
        android:paddingLeft="@dimen/space_10"
        android:gravity="center_vertical"
        android:textColor="@color/color_checkout_summery_title"
        />

    <ImageView
        android:id="@+id/product_arrow"
        android:layout_width="@dimen/space_24"
        android:layout_height="@dimen/space_24"
        app:layout_constraintStart_toEndOf="@id/product_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/product_logo"
        app:layout_constraintBottom_toBottomOf="@id/product_logo"
        android:src="@drawable/ic_arrow_right"
        android:layout_marginEnd="@dimen/space_17"
        android:layout_marginRight="@dimen/space_17"
        />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/product_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_arrow"
        >

        <include
            layout="@layout/drawer_sub_product_sheet"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>