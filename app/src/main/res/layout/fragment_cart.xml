<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.group.etoko.Fragment.Cart.ui.CartFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_marginBottom="?attr/actionBarSize"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:id="@+id/not_found_view_contianer"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/product_not_found_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/successful_txt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/successful_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:text="Product Not Found!"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias=".7"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

   <androidx.constraintlayout.widget.ConstraintLayout
       android:focusable="true"
       android:layout_width="match_parent"
       android:id="@+id/cart_container"
       android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_product_recycler_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/layout"
                android:padding="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:listitem="@layout/cart_product_recycler_item_design"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/cart_product_recycler_view"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cupon_de_edit_txtlayout"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/cupon_code_back"
                    android:padding="@dimen/space_10"
                    android:layout_margin="@dimen/space_10"
                    >

                    <EditText
                        android:id="@+id/cupon_edit_txt"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:hint="Appaly Cupon"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/space_10"
                        android:paddingLeft="@dimen/space_10"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/apply_txt_view"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@null"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/apply_txt_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apply"
                        android:clickable="true"
                        app:layout_constraintTop_toTopOf="@id/cupon_edit_txt"
                        app:layout_constraintBottom_toBottomOf="@id/cupon_edit_txt"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cupon_edit_txt"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"
                        android:layout_marginStart="@dimen/space_5"
                        android:layout_marginLeft="@dimen/space_5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16"
                    android:layout_marginStart="@dimen/space_10"
                    android:layout_marginEnd="@dimen/space_10"
                    >
                    <TextView
                        android:id="@+id/cart_sub_total_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub Total"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/cart_sub_total_txt_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/cart_sub_total_txt"
                        app:layout_constraintBottom_toBottomOf="@id/cart_sub_total_txt"
                        />

                    <TextView
                        android:id="@+id/cart_discount_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discount"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@id/cart_sub_total_txt"
                        app:layout_constraintTop_toBottomOf="@id/cart_sub_total_txt"
                        android:layout_marginTop="@dimen/space_5"
                        />

                    <TextView
                        android:id="@+id/cart_discount_value_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":- 5$"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cart_sub_total_txt_value"
                        android:layout_marginTop="@dimen/space_5"
                        />
                    <TextView
                        android:id="@+id/coupon_offer_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coupon Discount"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@id/cart_discount_txt"
                        app:layout_constraintTop_toBottomOf="@id/cart_discount_txt"
                        android:layout_marginTop="@dimen/space_5"
                        />
                    <TextView
                        android:id="@+id/coupon_offer_value_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cart_discount_value_txt"
                        android:layout_marginTop="@dimen/space_5"/>
                    <TextView
                        android:id="@+id/cart_total_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@id/coupon_offer_txt"
                        app:layout_constraintTop_toBottomOf="@id/coupon_offer_txt"
                        android:layout_marginTop="@dimen/space_5"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/cart_total_value_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/coupon_offer_value_txt"
                        android:layout_marginTop="@dimen/space_5"
                        />
                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent=".45" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <Button

                    android:id="@+id/checkout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Checkout Now"
                    android:background="@drawable/edit_txt_back"
                    android:layout_marginTop="@dimen/space_16"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginStart="@dimen/space_10"
                    android:layout_marginEnd="@dimen/space_10"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>
   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
