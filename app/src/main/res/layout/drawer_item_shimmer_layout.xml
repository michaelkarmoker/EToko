<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/space_8"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/drawer_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/navigation_guest_user_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginTop="@dimen/space_42"
                android:layout_marginEnd="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_30"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <!--                android:fontFamily="@font/roboto_regular"-->

                <TextView
                    android:id="@+id/navigation_user_signin_signup_txt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_10"
                    android:background="@color/md_grey_300"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/navigation_user_signin_signup_logo"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/navigation_user_signin_signup_logo"
                    android:layout_width="@dimen/space_32"
                    android:layout_height="@dimen/space_32"
                    android:background="@drawable/placeholder_fixed_category_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/login_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="@id/navigation_user_signin_signup_logo"
                    app:layout_constraintBottom_toBottomOf="@id/navigation_user_signin_signup_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:paddingTop="@dimen/space_4"
                    >
                    <ImageView
                        android:id="@+id/navigation_user_signup_logo"
                        android:layout_width="@dimen/space_32"
                        android:layout_height="@dimen/space_32"
                        android:background="@drawable/placeholder_fixed_category_bg"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:textSize="15sp"
                        android:background="@color/md_grey_300"
                        android:layout_marginTop="4dp"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drawer_header"
            android:layout_marginTop="@dimen/space_16"
            >


            <TextView
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:background="@color/md_grey_300"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/space_42"
                />

            <TextView
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:background="@color/md_grey_300"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/space_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v1"
                android:layout_marginEnd="72dp"
                />

            <TextView
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:background="@color/md_grey_300"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v2"
                android:layout_marginEnd="100dp"
                android:layout_marginTop="@dimen/space_16"
                />


            <TextView
                android:id="@+id/v4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:background="@color/md_grey_300"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v3"
                android:layout_marginEnd="130dp"
                android:layout_marginTop="@dimen/space_16"
                />


            <TextView
                android:id="@+id/v5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:background="@color/md_grey_300"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v4"
                android:layout_marginEnd="160dp"
                android:layout_marginTop="@dimen/space_16"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <View
                android:id="@+id/viewDividerCategories"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/space_8"
                android:background="@color/color_checkout_summery_title"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/navigation_req_product_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@+id/navigation_req_service_layout"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewDividerCategories">

                <ImageView
                    android:layout_width="@dimen/space_24"
                    android:layout_height="@dimen/space_24"
                    android:src="@drawable/placeholder_fixed_category_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:gravity="center"
                    android:textSize="@dimen/space_9"
                    android:background="@color/md_grey_300"
                    android:layout_margin="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navigation_req_service_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/navigation_req_product_layout"
                app:layout_constraintEnd_toStartOf="@id/navigation_about_choloshop_layout"
                app:layout_constraintTop_toBottomOf="@+id/viewDividerCategories"
                >

                <ImageView
                    android:layout_width="@dimen/space_24"
                    android:layout_height="@dimen/space_24"
                    android:src="@drawable/placeholder_fixed_category_bg" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:gravity="center"
                    android:textSize="@dimen/space_9"
                    android:background="@color/md_grey_300"
                    android:layout_margin="10dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_about_choloshop_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/navigation_req_service_layout"
                app:layout_constraintTop_toBottomOf="@+id/viewDividerCategories">

                <ImageView
                    android:layout_width="@dimen/space_24"
                    android:layout_height="@dimen/space_24"
                    android:src="@drawable/placeholder_fixed_category_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:gravity="center"
                    android:textSize="@dimen/space_9"
                    android:background="@color/md_grey_300"
                    android:layout_margin="10dp"
                    />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="@dimen/space_16"
                app:layout_constraintTop_toBottomOf="@id/navigation_about_choloshop_layout" />

            <LinearLayout
                android:id="@+id/navigation_cllNow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@id/navigation_req_product_layout"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:layout_marginStart="@dimen/space_16"
                >

                <ImageView
                    android:layout_width="@dimen/space_24"
                    android:layout_height="@dimen/space_24"
                    android:src="@drawable/placeholder_fixed_category_bg" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="@dimen/space_12"
                    android:layout_marginLeft="@dimen/space_16"
                    android:background="@color/md_grey_300"
                    />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>