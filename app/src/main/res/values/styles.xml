<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="SeeAllText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/see_all_bg</item>
        <item name="android:paddingTop">2.5dp</item>
        <item name="android:paddingBottom">2.5dp</item>
        <item name="android:text">See All</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
    <style name="CategoryNameStyle">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#4b4b4b</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="OrderHistoryStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>
